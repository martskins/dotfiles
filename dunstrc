#[signed_off]
#    appname = Pidgin
#    summary = *signed off*
#    urgency = low
#
#[says]
#    appname = Pidgin
#    summary = *says*
#    urgency = critical
#
#[twitter]
#    appname = Pidgin
#    summary = *twitter.com*
#    urgency = normal
#
# vim: ft=cfg

[spotify]
    appname = *Spotify*
    new_icon = spotify-client

[pa-applet]
		appname = *pa-applet*
		format = "%p"
