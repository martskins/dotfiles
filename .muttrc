# Folder hooks
folder-hook 'account.com.gmail.financiarme' 'source ~/.mutt/account.com.gmail.financiarme'
folder-hook 'account.com.gmail.pedidosya' 'source ~/.mutt/account.com.gmail.pedidosya'
folder-hook 'account.com.gmail.me' 'source ~/.mutt/account.com.gmail.me'

source ~/.mutt/account.com.gmail.me

# Macros for switching accounts
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.me<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.financiarme<enter><change-folder>!<enter>'
macro index <f4> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.pedidosya<enter><change-folder>!<enter>'
bind index G imap-fetch-mail
